@model student_management_asp_uppgift1.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<br/>
<div>

    <table class="table">
        <thead>
            <tr>
                <th>Student Name</th>
                <th>User name</th>
            </tr>
        </thead>
        <tbody>
            
                <tr>
                    <td>
                        @Model.FirstName @Model.LastName
                    </td>

                    <td>
                        @Model.UserName
                    </td>
                </tr>     
        </tbody>
    </table>


    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" type="button" class="btn btn-secondary">Back</a>
        <input type="submit" value="Delete" class="btn btn-danger" />

    </form>
</div>
