@model IEnumerable<student_management_asp_uppgift1.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Course </h1>

<p>
    <a asp-action="Create" type="button" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>

                @*@Html.ActionLink("Show students", "Details", new { id = item.Id })*@

                <a asp-action="Details" asp-route-id="@item.Id" type="button" class="btn btn-info">Course Details</a>

            </td>
        </tr>
}
    </tbody>
</table>
